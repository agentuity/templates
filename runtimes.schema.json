{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://agentuity.dev/runtimes.schema.json",
	"type": "array",
	"title": "Agentuity Project Runtime Templates",
	"description": "A list of runtime templates for Agentuity projects",
	"items": {
		"type": "object",
		"required": [
			"name",
			"description",
			"identifier",
			"language",
			"requirements"
		],
		"properties": {
			"name": {
				"type": "string",
				"description": "The display name of the template"
			},
			"description": {
				"type": "string",
				"description": "A brief description of the template"
			},
			"identifier": {
				"type": "string",
				"description": "Unique identifier for the template"
			},
			"language": {
				"type": "string",
				"description": "The primary programming language",
				"enum": ["javascript", "python"]
			},
			"requirements": {
				"type": "array",
				"items": {
					"type": "object",
					"required": ["command", "args", "version"],
					"properties": {
						"command": {
							"type": "string",
							"description": "The command to execute"
						},
						"args": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"description": "Command line arguments"
						},
						"version": {
							"type": "string",
							"description": "Version requirement string"
						},
						"brew": {
							"type": "string",
							"description": "Homebrew package name"
						},
						"url": {
							"type": "string",
							"description": "Installation URL",
							"format": "uri"
						},
						"selfupdate": {
							"type": "object",
							"properties": {
								"command": {
									"type": "string"
								},
								"args": {
									"type": "array",
									"items": {
										"type": "string"
									}
								}
							},
							"required": ["command", "args"]
						}
					}
				}
			}
		}
	}
}
